[init]
  defaultBranch = main

[merge]
  conflictstyle = diff3
  tool = vscode

[diff]
  tool = vscode

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "vscode"]
  cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
  keepBackup = false
